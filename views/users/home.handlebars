<link rel="stylesheet" href="/public/css/slides.css">
<div class="center">
    <img id="banner" src="/public/img/banner.png" alt="VGReviews">
</div>
{{#if games}}
<!-- https://www.w3schools.com/howto/howto_js_slideshow.asp -->
<!-- Slideshow container -->
<div class="slideshow-container">
    <div class="center">
        <h1>Featured Games</h1>
    </div>
    <!-- Display if there are no games in the database -->
    {{#if empty}}
    <div class="mySlides fade empty">
        <p>No games have been added yet!</p>
        <a href="/games/new">Add one now!</a>
    </div>
    {{/if}}

    <!-- Only render slides that exist (WIP)-->
    {{#if games.best_game}}
    <div class="mySlides fade">
        <h2>Highest Rated Overall Game</h2>
        {{!-- <div class="numbertext">1 / 3</div> --}}
        <a href="/games/{{games.best_game._id}}"><img src="{{games.best_game.image}}" alt="{{games.best_game.title}}"></a>
        <div class="score-info">
            <p class="score-label">User Score</p>
            <div class="score">
                <span class="score-span">{{games.best_game.averageRating}}</span>
            </div>
        </div>
        <h3><a href="/games/{{games.best_game._id}}">{{games.best_game.title}}</a></h3>
    </div>
    {{/if}}

    {{#if games.best_action}}
    <div class="mySlides fade">
        <h2>Highest Rated Action Game</h2>
        {{!-- <div class="numbertext">2 / 3</div> --}}
        <a href="/games/{{games.best_action._id}}"><img src="{{games.best_action.image}}" alt="{{games.best_action.title}}"></a>
        <div class="score-info">
            <p class="score-label">User Score</p>
            <div class="score">
                <span class="score-span">{{games.best_action.averageRating}}</span>
            </div>
        </div>
        <h3><a href="/games/{{games.best_action._id}}">{{games.best_action.title}}</a></h3>
    </div>
    {{/if}}

    {{#if games.best_adventure}}
    <div class="mySlides fade">
        <h2>Highest Rated Adventure Game</h2>
        {{!-- <div class="numbertext">3 / 3</div> --}}
        <a href="/games/{{games.best_adventure._id}}"><img src="{{games.best_adventure.image}}" alt="{{games.best_adventure.title}}"></a>
        <div class="score-info">
            <p class="score-label">User Score</p>
            <div class="score">
                <span class="score-span">{{games.best_adventure.averageRating}}</span>
            </div>
        </div>
        <h3><a href="/games/{{games.best_adventure._id}}">{{games.best_adventure.title}}</a></h3>
    </div>
    {{/if}}

    {{#if games.best_shooting}}
    <div class="mySlides fade">
        <h2>Highest Rated Shooting Game</h2>
        {{!-- <div class="numbertext">3 / 3</div> --}}
        <a href="/games/{{games.best_shooting._id}}"><img src="{{games.best_shooting.image}}" alt="{{games.best_shooting.title}}"></a>
        <div class="score-info">
            <p class="score-label">User Score</p>
            <div class="score">
                <span class="score-span">{{games.best_shooting.averageRating}}</span>
            </div>
        </div>
        <h3><a href="/games/{{games.best_shooting._id}}">{{games.best_shooting.title}}</a></h3>
    </div>
    {{/if}}

    {{#if games.best_sports}}
    <div class="mySlides fade">
        <h2>Highest Rated Sports Game</h2>
        {{!-- <div class="numbertext">3 / 3</div> --}}
        <a href="/games/{{games.best_sports._id}}"><img src="{{games.best_sports.image}}" alt="{{games.best_sports.title}}"></a>
        <div class="score-info">
            <p class="score-label">User Score</p>
            <div class="score">
                <span class="score-span">{{games.best_sports.averageRating}}</span>
            </div>
        </div>
        <h3><a href="/games/{{games.best_sports._id}}">{{games.best_sports.title}}</a></h3>
    </div>
    {{/if}}

    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&lt; Prev</a>
    <a class="next" onclick="plusSlides(1)">Next &gt;</a>
</div>

<!-- The dots/circles -->
<div style="text-align:center">
    <!-- Only render dots that are needed, and add more as they are needed (WIP) -->
    <span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
    <span class="dot" onclick="currentSlide(3)"></span>
    <span class="dot" onclick="currentSlide(4)"></span>
    <span class="dot" onclick="currentSlide(5)"></span>
</div>
{{/if}}

