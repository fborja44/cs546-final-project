<link rel="stylesheet" href="/public/css/slides.css">
<div class="center">
    <img id="banner" src="/public/img/banner.png" alt="VGReviews">
</div>
{{#if game}}
<!-- https://www.w3schools.com/howto/howto_js_slideshow.asp -->
<!-- Slideshow container -->
<div class="slideshow-container">
    <div class="center">
        <h1>Featured Games</h1>
    </div>
    <!-- Full-width images with number and caption text -->
    <div class="mySlides fade">
        <h3>Highest Rated Overall Game</h3>
        {{!-- <div class="numbertext">1 / 3</div> --}}
        <img src="{{game.image}}" style="width:100%">
        <div class="text">Caption Text</div>
    </div>

    <div class="mySlides fade">
        <h3>Highest Rated Action Game</h3>
        {{!-- <div class="numbertext">2 / 3</div> --}}
        <img src="https://cdn-ascope-prod.global.ssl.fastly.net/static/images/boxart_valorant_300x400.jpg" style="width:100%">
        <div class="text">Caption Two</div>
    </div>

    <div class="mySlides fade">
        <h3>Highest Rated Adventure Game</h3>
        {{!-- <div class="numbertext">3 / 3</div> --}}
        <img src="https://s1.gaming-cdn.com/images/products/840/orig/cyberpunk-2077-cover.jpg" style="width:100%">
        <div class="text">Caption Three</div>
    </div>

    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>

<!-- The dots/circles -->
<div style="text-align:center">
    <span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
    <span class="dot" onclick="currentSlide(3)"></span>
</div>
{{/if}}

