<link rel="stylesheet" href="/public/css/slides.css">
<div class="center">
    <img id="banner" src="/public/img/banner.png" alt="VGReviews">
</div>
{{#if games}}
<!-- https://www.w3schools.com/howto/howto_js_slideshow.asp -->
<!-- Slideshow container -->
<div class="slideshow-container">
    <div class="center">
        <h1>Featured Games</h1>
    </div>
    <!-- Display if there are no games in the database -->
    {{#if empty}}
    <div class="mySlides fade">
        <p>No games have been added.</p>
        <a href="/games/new">Add one now!</a>
    </div>
    {{/if}}

    <!-- Only render slides that exist (WIP)-->
    {{#if games.best_game}}
    <div class="mySlides fade">
        <h3>Highest Rated Overall Game</h3>
        {{!-- <div class="numbertext">1 / 3</div> --}}
        <img src="{{games.best_game.image}}" style="width:100%">
        <div class="text">{{games.best_game.title}}</div>
    </div>
    {{/if}}

    {{#if games.best_action}}
    <div class="mySlides fade">
        <h3>Highest Rated Action Game</h3>
        {{!-- <div class="numbertext">2 / 3</div> --}}
        <img src="{{games.best_action.image}}" style="width:100%">
        <div class="text">{{games.best_action.title}}</div>
    </div>
    {{/if}}

    {{#if games.best_adventure}}
    <div class="mySlides fade">
        <h3>Highest Rated Adventure Game</h3>
        {{!-- <div class="numbertext">3 / 3</div> --}}
        <img src="{{games.best_adventure.image}}" style="width:100%">
        <div class="text">{{games.best_adventure.title}}</div>
    </div>
    {{/if}}

    {{#if games.best_shooting}}
    <div class="mySlides fade">
        <h3>Highest Rated Shooting Game</h3>
        {{!-- <div class="numbertext">3 / 3</div> --}}
        <img src="{{games.best_shooting.image}}" style="width:100%">
        <div class="text">{{games.best_shooting.title}}</div>
    </div>
    {{/if}}

    {{#if games.best_shooting}}
    <div class="mySlides fade">
        <h3>Highest Rated Sports Game</h3>
        {{!-- <div class="numbertext">3 / 3</div> --}}
        <img src="{{games.best_sports.image}}" style="width:100%">
        <div class="text">{{games.best_sports.title}}</div>
    </div>
    {{/if}}

    <!-- Next and previous buttons -->
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>
</div>

<!-- The dots/circles -->
<div style="text-align:center">
    <!-- Only render dots that are needed, and add more as they are needed (WIP) -->
    <span class="dot" onclick="currentSlide(1)"></span>
    <span class="dot" onclick="currentSlide(2)"></span>
    <span class="dot" onclick="currentSlide(3)"></span>
</div>
{{/if}}

