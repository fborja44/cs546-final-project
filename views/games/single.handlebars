<link rel="stylesheet" href="/public/css/game.css">
<div class="game-container">
    {{#if game}}
    <div class="game">
        <div id="main-game-content">
            <div class="score">
                <span>{{game.averageRating}}</span> <!-- replace with {{averageRating}} -->
            </div>
            <img src="{{game.image}}" alt="{{game.title}}">
            <div class="info">
                <a href="games/{{game.title}}" class="title">{{game.title}}</a>
                <p class="subinfo">({{game.releaseYear}}) <span>{{game.publisher}}</span></p>
                <table>
                    <tr>
                        <th>Genres:</th>
                        <td>{{game.genres}}</td>
                    </tr>
                    <tr>
                        <th>Platforms:</th>
                        <td>{{game.platforms}}</td>
                    </tr>
                    <tr>
                        <th>Prices:</th>
                        <td>
                            {{#each game.prices}}
                                {{platform}}: {{price}}
                            {{/each}}
                        </td>
                    </tr>
                </table>
            </div>
            <p id="game-desc">
                {{game.description}}
            </p>
        </div>
        
        <h1>Reviews</h1>
        {{#each game.reviews}}
        <div class="review">
            <div class="review-heading">
                <div class="review-rating">
                    <span>{{rating}}</span>
                </div>
                <h2>{{reviewTitle}}</h2>
            </div>

            <p>Author: {{author.username}}</p>
            <p>Date: {{reviewDate}}</p>
            <p>Review: {{review}}</p>
            
            <div>
                {{replies}}
            </div>
        </div>
        {{/each}}
        {{#if reviewEmpty}}
        <p id="empty">There are no reviews for this game. You can be the first to write one!</p>
        {{/if}}
        <!-- Should only be shown if user is logged in -->
        <div>
            <h3>Create a new Review</h3>
            <form>
                <div class="form-elem">
                    <label>Title</label>
                    <input type="text" placeholder="Give your review a title!">
                </div>
                <div id="rating-input" class="form-elem">
                    <label>Rating</label>
                    <input type="number" min="1" max="5" placeholder="5">
                </div>
                <div class="form-elem">
                    <label>Review</label>
                    <textarea placeholder="Enter your review here!" rows="4" cols="50"></textarea>
                </div>
                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
    {{/if}}
</div>